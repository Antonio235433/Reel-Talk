@model SeniorProject.Models.SearchReview

@{
    ViewBag.Title = "Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style> 

input{
    padding-left:50px;
}

</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Review Search</title>
</head>
<body>
    <div class="container">
        <div class="jumbotron">
            <h3 class="text-center">Search For Review</h3>
            <div class="row">
                <div class="col-lg-12 col-lg-offset-0">
                    @using (Html.BeginForm("SearchReview", "Review", FormMethod.Post))
                    {

                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <h4></h4>
                            <hr />
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            
                            <div class="form-group"  >
                                <div class="col-md-10" >
                                    @Html.TextBoxFor(model => model.Title, new { @class = "form-control", @placeholder = "Search for review..", @style = "float-align:center ; text-align:center" } )
                                    @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                                </div>
                            </div>

                        </div>
                    }
                </div>
                <div class="row" style="text-align:center">
                    <a class="btn btn-lg btn-success"href="/Review/CreateReview">Create Review</a> <a class="btn btn-lg btn-success" href = "/Review/MyReview">My Reviews</a>
                </div>
            </div>
        </div>
    </div>

    <script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/axios.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/Movie.js")"></script>
</body>
</html>
