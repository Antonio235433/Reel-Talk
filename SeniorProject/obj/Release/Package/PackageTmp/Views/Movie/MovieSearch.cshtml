
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Movie Info</title>
</head>
<body>
    @ViewData["LoginResponse"]

    <div class="container">
        <div class="jumbotron">
            <h3 class="text-center">Search For Movie</h3>
            <div class="row">
                <div class="col-lg-12">
                    <form id="searchForm" style="width:100%">
                        <input type="text" class="form-control search" style="margin:auto;" id="searchText" placeholder="Search for TV Show...">
                    </form>
                </div>
            </div>
            <div class="row" style="text-align:center">

            <a class="btn btn-lg btn-success" id="NowPlaying">Now Playing</a> <a class="btn btn-lg btn-success" id="Upcoming">Upcoming</a> <a class="btn btn-lg btn-success" id="Popular">Popular</a>
        </div>
            </div>
    </div>

        <div class="container">
            <div id="movies" class="row"></div>
        </div>

        <script src="@Url.Content("~/Scripts/jquery-3.3.1.min.js")"></script>
        <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
        <script src="@Url.Content("~/Scripts/axios.min.js")"></script>
        <script type="text/javascript" src="@Url.Content("~/Scripts/Movie.js")"></script>
</body>
</html>

